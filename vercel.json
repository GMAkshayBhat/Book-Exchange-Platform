{
  "version": 2,
  "builds": [
    {
      "src": "book-exchange-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "book-exchange-frontend/build"
      }
    },
    {
      "src": "book-exchange-backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/book-exchange-backend/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/book-exchange-frontend/$1"
    }
  ]
}
